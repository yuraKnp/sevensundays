{% schema %}
{
  "name": "Discover",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "discover_subtitle",
      "label": "Subtitle"
    },
    {
      "type": "inline_richtext",
      "id": "discover_title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "discover_text_before_gallery",
      "label": "Title"
    },
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Gallery Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "textarea",
          "id": "caption",
          "label": "Caption"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Grid Gallery"
    }
  ],
}
{% endschema %}
