<div class="section padd-lg">
    <div class="container">
        <div class="title-shortcode row-align mob-left">
            <div class="left-part">
                {% if section.settings.subtitle != blank %}
                <div class="motto">{{ section.settings.subtitle }}</div>
                {% endif %}
                {% if section.settings.title != blank %}
                <div class="h2 title">{{ section.settings.title }}</div>
                {% endif %}
            </div>
            <div class="right-part">
                {% if section.settings.short_desc != blank %}
                <div class="text text-md">{{ section.settings.short_desc }}</div>
                {% endif %}
            </div>
        </div>
        {% if section.blocks != blank %}
        <div class="swiper-entry">
            <div class="swiper-container overflow-visible" data-options='{ 
                "slidesPerView": 1.07,
                "spaceBetween": 12,
                "breakpoints":{
                    "576":{"spaceBetween": 16, "slidesPerView": 1.5},
                    "992":{"spaceBetween": 16, "slidesPerView": 2},
                    "1200":{"spaceBetween": 16, "slidesPerView": 3}
                }}'>
                <div class="swiper-wrapper">
                    {% for block in section.blocks %}
                        {%- assign number = block.settings.number -%}
                        {%- assign heading = block.settings.title -%}
                        {%- assign desc = block.settings.description -%}
                    <div class="swiper-slide">
                        <div class="deserves-item">
                            {% if number != blank %}
                            <div class="text text-sm">{{ number }}</div>
                            {% endif %}
                            <div class="deserves-info">
                                {% if heading != blank %}
                                <div class="title h5">{{ heading }}</div>
                                {% endif %}
                                {% if desc != blank %}
                                <div class="text">{{ desc }}</div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
            <div class="swiper-controls-wrap mt-sm">
                <div class="swiper-button-prev">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                        <path d="M19 12L5 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M12 19L5 12L12 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </div>
                <div class="swiper-button-next">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                        <path d="M5 12H19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M12 5L19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </div>
            </div>
            <div class="swiper-pagination swiper-pagination-relative d-none"></div>
        </div>
        {% endif %}
    </div>
</div>

{% schema %}
{
  "name": "Three columns (no bg)",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "inline_richtext",
      "id": "short_desc",
      "label": "Short description"
    },
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide Item",
      "limit": 5,
      "settings": [
         {
            "type": "text",
            "id": "number",
            "label": "Number"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "inline_richtext",
            "id": "description",
            "label": "Description"
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "Three columns (no bg)",
      "blocks": []
    }
  ]
}
{% endschema %}