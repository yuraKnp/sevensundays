                          {% if upsell_variant_id != blank %}
                            {% assign variant_id = upsell_variant_id %}
                            
                          {% endif %}

                          {% assign variant_id_sec = selected_product.selected_or_first_available_variant.id %}
                          {% if upsell_variant_id_sec != blank %}
                            {% assign variant_id_sec = upsell_variant_id_sec %}
                            
                          {% endif %}

