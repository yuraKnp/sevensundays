<div class="section sec-padd gradient-2">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-6 col-xl-5 align-self-center">
                <div class="title-shortcode">
                    {% if section.settings.subtitle != blank %}
                    <div class="motto">{{ section.settings.subtitle }}</div>
                    {% endif %}
                    {% if section.settings.title != blank %}
                    <h1 class="h1 title no-balance">{{ section.settings.title }}</h1>
                    {% endif %}
                    {% if section.settings.link_text != blank and section.settings.link_url != blank %}
                    <a href="{{ section.settings.link_url }}" class="btn">
                        <b>{{ section.settings.link_text }}</b>
                        {%- assign svg_icon_url = 'icons_global.svg' | asset_url -%}
                        {%- assign url_no_version = svg_icon_url | split: '?' | first -%}
                        {%- assign final_svg_url = url_no_version | append: '#btn-arrow' -%}
                        <svg width="12" height="12"><use href="{{ final_svg_url }}"></use></svg>
                    </a>
                    {% endif %}
                </div>
            </div>
            {% assign right_background_image = section.settings.right_background_image %}
            {% assign right_image = section.settings. right_image %}
            
            <div class="col-lg-6">
                <div class="lr-img-1">

                    {% if right_background_image != blank %}
                        {% assign image_url = right_background_image | image_url %}
                        {% assign image_format = right_background_image.format %}
                        <picture>
                            <source srcset="{{ image_url }}" type="{{ image_format }}">
                            <img width="380" height="240" src="#" alt="" loading="lazy">
                        </picture>
                    {% endif %}
                    <div class="product-item-wrapp type2">
                        {% if right_image != blank %}
                        <div class="product-img">
                            {% assign image_url = right_image | image_url %}
                            {% assign image_format = right_image.format %}
                            <picture>
                                <source srcset="{{ image_url }}" type="{{ image_format }}">
                                <img width="380" height="240" src="#" alt="" loading="lazy">
                            </picture>
                        </div>
                        {% endif %}
                        <div class="pr-content">
                            {% if section.settings.right_text != blank %}
                            <div class="title h5">{{ section.settings.right_text }}</div>
                            {% endif %}
                            {% if section.settings.right_add_text_b != blank %}
                            <div class="text"><b>{{ section.settings.right_add_text_b }}</b></div>
                            {% endif %}
                            {% if section.settings.right_add_text != blank %}
                            <div class="text">{{ section.settings.right_add_text }}</div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Banner, right info",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link text"
    },
    {
      "type": "text",
      "id": "link_url",
      "label": "Link url"
    },
    {
        "type": "image_picker",
        "id": "right_background_image",
        "label": "Right background image"
    },
    {
        "type": "image_picker",
        "id": "right_image",
        "label": "Right Image"
    },
    {
      "type": "text",
      "id": "right_text",
      "label": "Right title"
    },
    {
      "type": "text",
      "id": "right_add_text_b",
      "label": "Right additional text bold"
    },
    {
      "type": "text",
      "id": "right_add_text",
      "label": "Right additional text"
    },
  ],
  "presets": [
    {
      "name": "Banner, right info",
      "blocks": []
    }
  ]
}
{% endschema %}